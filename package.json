{
  "name": "@we-make-websites/stylelint-config",
  "version": "1.0.0",
  "description": "We Make Website's stylelint rules and config",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/we-make-websites/stylelint-config"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check": "yarn lint && yarn test",
    "test": "tape plugins/**/*.test.js"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "keywords": [
    "stylelint",
    "stylelint-config",
    "config",
    "shopify",
    "css"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/we-make-websites/stylelint-config/issues"
  },
  "homepage": "https://github.com/we-make-websites/stylelint-config",
  "eslintConfig": {
    "extends": [
      "plugin:shopify/esnext",
      "plugin:shopify/node"
    ]
  },
  "dependencies": {
    "merge": "1.2.x",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-order": "1.0.0",
    "stylelint-prettier": "1.0.6",
    "stylelint-scss": "3.3.0"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-plugin-shopify": "^24.0.0",
    "stylelint": "9.5.0",
    "stylelint-test-rule-tape": "^0.2.0",
    "tape": "^4.9.1"
  },
  "peerDependencies": {
    "stylelint": ">=9.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
